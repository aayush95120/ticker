            <p><%= link_to 'New Property', new_property_path %></p>
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
        <div class="text-center">    
          <p><%= link_to 'New Loan', new_loan_path %></p>
        </div>
      </div>
    </section>
  </div>
</div>